{% extends 'layouts/template.html.twig' %}

{% block title %}Edit Post{% endblock %}

{% block body %}
    <h1>Edit Post</h1>

    {{ form_start(form) }}

    {{ form_row(form.name) }}
    {{ form_row(form.title) }}
    {{ form_row(form.description) }}
    {% if post.image %}
        <img class="mb-3" src="{{ asset('uploads/images/' ~ post.image) }}" alt="{{ post.title }}" style="max-width: 200px;">
    {% endif %}
    {{ form_row(form.image) }}
    {{ form_row(form.remove_image) }}
    {{ form_row(form.article) }}
    {{ form_row(form.category) }}

    {% if is_granted('ROLE_ADMIN') %}
        {{ form_row(form.isActive) }}
    {% endif %}

    {{ form_row(form._token) }}

    <button class="btn btn-primary">Update</button>

    {{ form_end(form, { render_rest: false }) }}

    <div class="mt-5">
        <a class="btn btn-dark" href="{{ path('cabinet') }}">‚Üê Back to cabinet</a>
    </div>
{% endblock %}
